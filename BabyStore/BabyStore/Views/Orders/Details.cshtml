@model BabyStore.Models.Order

@{
    ViewBag.Title = "Order Details";
}

<h2>@ViewBag.Title</h2>
<hr/>
<div class="row">
    <div class="col-md-8">
        <h4>Items (s)</h4>
    </div>
    <div class="col-md-2">
        <h4>Quantity</h4>
    </div>
    <div class="col-md-2">
        <h4>Unit Price</h4>
    </div>
</div>
@foreach (var orderLine in Model.OrderLines)
{
    <div class="row">
        <div class="col-md-8">@Html.DisplayFor(pn => orderLine.ProductName)</div>
        <div class="col-md-2">@Html.DisplayFor(q => orderLine.Quantity)</div>
        <div class="col-md-2">@Html.DisplayFor(up => orderLine.UnitPrice)</div>
    </div>
}
